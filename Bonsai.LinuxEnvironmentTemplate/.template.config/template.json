{
    "$schema": "http://json.schemastore.org/template",
    "author": "Bonsai",
    "classifications": [ "Bonsai", "Linux", "Environment" ],
    "description": "A template for bootstrapping a Bonsai linux environment",
    "identity": "Bonsai.LinuxEnvironmentTemplate",
    "shortName": "bonsaienvl",
    "name": "Bonsai Linux Environment",
    "tags": {
        "type": "project"
    },
    "symbols": {
        "version": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "latest",
            "description": "The version of Bonsai to install.",
            "replaces": "$SETUP_VERSION"
        },
        "include-vscode-debugger-config": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false",
            "description": "Include vscode debugger configuration files"
        },
        "runtime-application": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "wine",
            "description": "Bonsai's runtime application to use on linux. Currently supported values are 'wine' and 'mono'."
        },
        "runtime-application-generator": {
            "type": "generated",
            "generator": "switch",
            "replaces": "$BONSAI_RUNTIME_APPLICATION",
            "parameters": {
                "cases": [
                    {
                        "condition": "(runtime-application == 'wine')",
                        "value": "\"wine\""
                    },
                    {
                        "condition": "(runtime-application == 'mono')",
                        "value": "\"mono\""
                    }
                ]
            }
        }
    },
    "postActions": [{
        "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
        "description": "Initializes the bonsai environment in Linux.",
        "manualInstructions": [{
            "text": "Run the 'Setup.sh' script."
        }],
        "args": {
            "executable": "bash",
            "args": ".bonsai/Setup.sh",
            "redirectStandardOutput": false
        },
        "applyFileRenamesToArgs": ["args"]
    }],
    "sources": [{
        "source": "./scripts",
        "target": "./.bonsai"
    },
    {
        "source": "./vscode",
        "target": "./.vscode",
        "rename": {
            "launch.json.template": "launch.json"
        },
        "condition": "(include-vscode-debugger-config)"
    }]
}