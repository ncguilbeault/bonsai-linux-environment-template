{
    "$schema": "http://json.schemastore.org/template",
    "author": "Bonsai",
    "classifications": [ "Bonsai", "Linux", "Environment" ],
    "description": "A template for bootstrapping a Bonsai linux environment",
    "identity": "Bonsai.LinuxEnvironmentTemplate",
    "shortName": "bonsaienvl",
    "name": "Bonsai Linux Environment",
    "tags": {
        "type": "project"
    },
    "symbols": {
        "version": {
            "type": "parameter",
            "datatype": "string",
            "defaultValue": "latest",
            "description": "The version of Bonsai to install.",
            "replaces": "$SETUP_VERSION"
        },
        "include-debugger-config": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true",
            "description": "Include debugger configuration files"
        }
    },
    "postActions": [{
        "actionId": "3A7C4B45-1F5D-4A30-959A-51B88E82B5D2",
        "description": "Initializes the bonsai environment in Linux.",
        "manualInstructions": [{
            "text": "Run the 'Setup.sh' script."
        }],
        "args": {
            "executable": "bash",
            "args": ".bonsai/Setup.sh",
            "redirectStandardOutput": false
        },
        "applyFileRenamesToArgs": ["args"]
    }],
    "sourceName": ".bonsai",
    "sources": [{
        "target": "./.bonsai",
        "modifiers": [
            {
                "condition": "(include-debugger-config == true)",
                "rename": {
                    ".vscode/launch.json.template": ".vscode/launch.json"
                }
            }
        ]
    }],
    "defaultName": ".bonsai",
    "preferDefaultName": true
}